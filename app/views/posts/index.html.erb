<div class="jumbo">
<!--  <img class="ui fluid image" src="https://wizardryfoundry.com/wp-content/uploads/2014/10/black_lotus.jpg">
--></div>

<div class="ui container">
  <!-- Show search query to user (what they searched for...) -->
  <div class="ui center aligned container">
  <% @posts.to_a %>
  <% if params[:search] %>
 <!-- <h1>Results for "<b><%= params[:search] %></b>"</h1> -->

  <div class='ui justified container'>
  <h1 class="ui header">
    <i class="search icon"></i>
    <div class="content">
      Search Results For:
      <div class="sub header">"<%= params[:search] %>"</div>
    </div>
  </h1>
  <hr>
  <br>
  </div>

  <% end %>
  </div>

  <% @posts.each do |post| %>
  <div class="ui green padded segment">
     <h2 class="ui header"><%= link_to post.title, post %></h2>
     <p><%= post.content %></p>

     <a class="ui orange label">
       <%= post.user.email  %>
       <div class="detail"><%= time_ago_in_words(post.created_at) %></div>
     </a>

     <%= link_to 'Show', post %>
     <% if post.user == current_user %>
       <td><%= link_to 'Edit', edit_post_path(post) %></td>
       <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
     <% end %>
     </div>
  <% end %>
</div>
